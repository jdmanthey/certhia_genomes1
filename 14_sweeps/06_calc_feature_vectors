# for some reason the cluster submission scripts would not run the fvecsim and the jobs would just hang
# so here are some loops for qlogin jobs

source activate selection

python ~/diploSHIC/diploSHIC.py fvecSim diploid americana_neutral.txt.gz \
americana_neutral.fvec --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11

for i in $( ls americana_soft* ); do 
j=${i%txt.gz}fvec;
python ~/diploSHIC/diploSHIC.py fvecSim diploid $i $j --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11;
done

for i in $( ls americana_hard* ); do 
j=${i%txt.gz}fvec;
python ~/diploSHIC/diploSHIC.py fvecSim diploid $i $j --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11;
done

for i in $( ls albescens_soft* ); do 
j=${i%txt.gz}fvec;
python ~/diploSHIC/diploSHIC.py fvecSim diploid $i $j --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11;
done

for i in $( ls albescens_hard* ); do 
j=${i%txt.gz}fvec;
python ~/diploSHIC/diploSHIC.py fvecSim diploid $i $j --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11;
done


python ~/diploSHIC/diploSHIC.py fvecSim diploid albescens_neutral.txt.gz \
albescens_neutral.fvec --totalPhysLen 220000 \
--maskFileName diplo_mask.fasta.gz --chrArmsForMasking all --numSubWins 11


